{
  "name": "template-js",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "source": ["app", "src"],
  "scripts": {
    "dev": "concurrently \"NODE_ENV=development nodemon src/server.js\" \"tailwindcss -i ./app/App.css -o ./public/tailwind.css --watch\"",
    "build": "npm run build:client && npm run build:server && npm run build:css",
    "build:client": "vite build",
    "build:server": "vite build --ssr app/entry-server.jsx --outDir dist/server",
    "build:css": "tailwindcss -i ./app/App.css -o ./dist/client/tailwind.css",
    "start": "NODE_ENV=production node src/server.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.27.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.4.13",
    "vite": "^5.4.8",
    "terser": "^5.36.0",
    "vite-plugin-compression2": "^0.12.0"
  }
}
